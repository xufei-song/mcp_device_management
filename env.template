# MCP Test Device Management System Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_WORKERS=1
MCP_SERVER_RELOAD=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_FILE=logs/mcp_server.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Device Discovery Configuration
# =============================================================================
DEVICE_DISCOVERY_INTERVAL=30
DEVICE_DISCOVERY_TIMEOUT=10
DEVICE_STATUS_UPDATE_INTERVAL=60

# Android Device Configuration
ANDROID_AUTO_DISCOVER=true
ANDROID_ADB_PATH=adb
ANDROID_DEVICE_TIMEOUT=30

# iOS Device Configuration
IOS_AUTO_DISCOVER=true
IOS_LIBIMOBILEDEVICE_PATH=idevice_id
IOS_DEVICE_TIMEOUT=30

# Windows Device Configuration
WINDOWS_AUTO_DISCOVER=false
WINDOWS_WINRM_PORT=5985
WINDOWS_DEVICE_TIMEOUT=30

# =============================================================================
# File Transfer Configuration
# =============================================================================
UPLOAD_MAX_SIZE=100MB
DOWNLOAD_MAX_SIZE=100MB
FILE_CHUNK_SIZE=8192
TEMP_FILE_CLEANUP_INTERVAL=3600

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_TYPE=file
DATABASE_PATH=data/devices.db
DATABASE_BACKUP_INTERVAL=86400

# =============================================================================
# WebSocket Configuration
# =============================================================================
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_CONNECTION_TIMEOUT=300

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG_MODE=true
SHOW_SQL_QUERIES=false
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# Notification Configuration
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_CONCURRENT_DEVICES=50
DEVICE_OPERATION_TIMEOUT=120
CACHE_TTL=300
SESSION_TIMEOUT=1800

